<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
	package="uk.org.brindy.android.moneytracker" android:versionName="1.7"
	android:versionCode="7">
	<uses-sdk android:minSdkVersion="3" />
	<application android:icon="@drawable/icon" android:label="@string/app_name">
		<activity android:name=".MoneyTracker" android:label="@string/app_name">
			<intent-filter>
				<action android:name="android.intent.action.MAIN" />
				<category android:name="android.intent.category.LAUNCHER" />
			</intent-filter>
		</activity>
		<activity android:name=".ExpenseEdit" android:label="@string/label_expense_edit"></activity>
		<receiver android:name=".MoneyTrackerWidgetProvider"
			android:label="@string/widget_label" android:icon="@drawable/icon">
			<intent-filter>
				<action android:name="android.appwidget.action.APPWIDGET_UPDATE" />
			</intent-filter>
			<meta-data android:name="android.appwidget.provider"
				android:resource="@xml/widget_info" />
		</receiver>
	</application>
</manifest> 