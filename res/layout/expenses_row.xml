<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="horizontal">

	<TextView android:id="@+id/value" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:minWidth="75px"
		android:gravity="right" android:typeface="monospace"
		android:paddingRight="3px" />

	<TextView android:id="@+id/description" android:layout_width="wrap_content"
		android:layout_height="wrap_content" />

</LinearLayout>