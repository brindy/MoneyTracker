<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:layout_width="wrap_content" android:layout_height="wrap_content"
	android:orientation="horizontal">

	<ImageView android:id="@+id/edit" android:src="@drawable/note_edit"
		android:clickable="true" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:padding="3px"
		android:layout_gravity="center" />

	<TextView android:id="@+id/value" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:minWidth="100px"
		android:gravity="right" android:typeface="monospace"
		android:paddingRight="4px" android:textSize="20px" />

	<TextView android:id="@+id/description" android:layout_width="wrap_content"
		android:layout_height="wrap_content" android:textSize="20px" />

</LinearLayout>