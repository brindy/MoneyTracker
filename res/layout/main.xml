<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:minWidth="100px"
	android:minHeight="100px">

	<LinearLayout android:layout_width="fill_parent"
		android:layout_height="wrap_content" android:orientation="horizontal"
		android:gravity="bottom">

		<LinearLayout android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:orientation="vertical"
			android:layout_weight="1">

			<TextView android:layout_width="wrap_content"
				android:layout_height="wrap_content" android:text="Starting amount:"
				android:textSize="10px" />

			<EditText android:id="@+id/disposable" android:layout_width="fill_parent"
				android:layout_height="wrap_content" android:layout_weight="1"
				android:textSize="22px" android:inputType="numberDecimal" />

		</LinearLayout>

		<ImageButton android:layout_width="wrap_content"
			android:layout_height="wrap_content" android:src="@drawable/plus_32"
			android:id="@+id/add" />

	</LinearLayout>

	<ListView android:id="@+id/android:list"
		android:layout_height="fill_parent" android:layout_width="fill_parent"
		android:layout_weight="1" />

	<TextView android:id="@+id/remaining" android:layout_height="wrap_content"
		android:layout_width="fill_parent" android:textSize="22px" />

</LinearLayout>
